<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hu.vadasz.peter.knockmessenger.Activities.PermissionDeniedActivity"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <ImageView
        android:src="@mipmap/ic_sentiment_very_dissatisfied_black_48dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/permissionDeniedActivity_sadFaceMargin"/>

    <ImageButton
        android:id="@+id/permissionDeniedActivity_retryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_replay_black_48dp"
        android:background="@null"/>

    <TextView
        android:layout_below="@id/permissionDeniedActivity_retryButton"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/permissionDeniedActivity_message"/>

</RelativeLayout>
